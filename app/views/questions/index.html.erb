<h1>Listing questions</h1>
<br />
<table border='1'>
  <tr>
  	<th>QUESTION NUMBER </th>
    <th>Text</th>
    <th>Vote</th>
    <th>Asked</th>
    <th></th>
  </tr>

<% @questions.each do |question| %>
  <tr>
    <td><%= question.id %></td>
	<td><%= question.text %></td>
    <td><%= question.vote %></td>
    <td><%= question.asked %></td>
    <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

